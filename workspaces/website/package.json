{
  "name": "@hogg/website",
  "version": "0.0.0",
  "author": "Harry Hogg <harry@hogg.io>",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "yarn run clean && yarn run build:client && yarn run build:server && yarn run ssg",
    "build:client": "vite build --outDir dist/client",
    "build:server": "vite build --ssr src/entry-server.tsx --outDir dist/server",
    "clean": "rm -rf ./dist",
    "dev": "vite --host localhost --port 4001",
    "preview": "superstatic dist/client --port 8080 --host 127.0.0.1",
    "ssg": "node prerender"
  },
  "devDependencies": {
    "@types/luxon": "^3.4.1",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@vitejs/plugin-react-swc": "^3.0.0",
    "superstatic": "^6.0.4",
    "typescript": "^5.0.4",
    "vite": "^5.2.9"
  },
  "dependencies": {
    "@hogg/circle-art": "workspace:^",
    "@hogg/circle-intersections": "workspace:^",
    "@hogg/circular-sequence": "workspace:^",
    "@hogg/common": "workspace:^",
    "@hogg/evolution": "workspace:^",
    "@hogg/gap-validation": "workspace:^",
    "@hogg/grahams-scan": "workspace:^",
    "@hogg/line-segment-extending": "workspace:^",
    "@hogg/preshape": "workspace:^",
    "@hogg/snake": "workspace:^",
    "@hogg/spatial-grid-map": "workspace:^",
    "@hogg/spirals": "workspace:^",
    "@hogg/tilings": "workspace:^",
    "@hogg/wasm": "workspace:^",
    "@react-spring/web": "^9.7.3",
    "framer-motion": "11.5.6",
    "lucide-react": "0.447.0",
    "luxon": "^3.4.4",
    "preshape": "^19.1.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-helmet-async": "^2.0.3",
    "react-markdown": "^9.0.1",
    "react-router-dom": "^6.20.1"
  }
}
